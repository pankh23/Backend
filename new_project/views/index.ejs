<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <div class="main w-full min-h-screen bg-zinc-900">

        <div class="form text-white p-10">
            <form action="/create" method="post">
                <input class='block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none' type="text" placeholder="Title" name="title">

                <textarea class='block px-5 py-2 mt-2 bg-zinc-800 resize-none w-full rounded-md outline-none' placeholder="Enter details here" name="details"></textarea>

                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create tasks">
            </form> 
        </div>


        <div class="tasks p-10 text-white flex gap-3 flex-wrap">

           
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl  tracking-tighter"><%= val %></h1> 
                        <a class="text-blue-500 initial-block mt-3" href="">Read more</a>
                     </div>
                <% }) %>
            <% } else{ %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
            
             
        </div>
    </div>
</body>
</html>


