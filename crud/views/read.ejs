<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 text-white p-10">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Back to Home</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>

        <div class="users flex gap-4 flex-wrap">
            <% users.forEach(function(user) { %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <!-- Placeholder for consistent aspect ratio -->
                    <div class="relative w-full h-52 bg-zinc-500 overflow-hidden rounded-lg">
                        <img 
                            class="absolute w-full h-full object-cover" 
                            src="<%= user.image %>" 
                            alt="<%= user.name %>"
                        >
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex gap-3">
                        <a href="" class="text-zinc-600">Edit user</a>
                        <a href="" class="text-red-500">Delete user</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
